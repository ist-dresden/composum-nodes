<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="sling:OrderedFolder"
        sling:resourceType="composum/nodes/console/page">
    <crxde
            jcr:primaryType="nt:unstructured"
            jcr:title="CRXDE"
            description="composum/nodes/aem/console/components/crxde/description"
            sling:redirect="/crx/de/index.jsp#${path}"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}20"
            target="aem"
            precondition="[restrictions:nodes/aem/crxde=read,http:/crx/de/index.jsp,resource:composum/nodes/aem/console/components/crxde]"/>
    <packmgr
            jcr:primaryType="nt:unstructured"
            jcr:title="Packages"
            sling:resourceType="composum/nodes/aem/console/components/packmgr"
            description="composum/nodes/aem/console/components/packmgr/description"
            categories="[aem,nodes]"
            order="{Long}30"
            target="aem"
            precondition="[restrictions:nodes/aem/packmgr=read,http:/crx/packmgr/index.jsp,resource:composum/nodes/aem/console/components/packmgr]"/>
    <assets
            jcr:primaryType="nt:unstructured"
            jcr:title="Assets"
            sling:redirect="/assets.html${editable}"
            pathCondition="^/content/dam(/.+)?$"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}200"
            target="aem"
            precondition="[restrictions:nodes/aem/assets=read,runmode:author]"/>
    <fragments
            jcr:primaryType="nt:unstructured"
            jcr:title="Fragments"
            sling:redirect="/aem/experience-fragments.html${editable}"
            pathCondition="^/content/experience-fragments(/.+)?$"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}300"
            target="aem"
            precondition="[restrictions:nodes/aem/fragments=read,runmode:author]"/>
    <sites
            jcr:primaryType="nt:unstructured"
            jcr:title="Sites"
            sling:redirect="/sites.html${editable}"
            pathCondition="^/content(?!(/(dam|experience-fragments)/)).*$"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}400"
            target="aem"
            precondition="[restrictions:nodes/aem/sites=read,runmode:author]"/>
    <edit
            jcr:primaryType="nt:unstructured"
            jcr:title="Edit"
            sling:redirect="/editor.html${editable.html}"
            pathCondition="^/content(?!(/(dam)/)).*$"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}500"
            target="_blank"
            precondition="[restrictions:nodes/aem/edit=read,runmode:author]"/>
    <view
            jcr:primaryType="nt:unstructured"
            jcr:title="View"
            sling:redirect="${editable.html}"
            pathCondition="^/content(?!(/(dam)/)).*$"
            dynamicRedirect="{Boolean}true"
            categories="[aem,nodes]"
            order="{Long}550"
            target="_blank"
            precondition="[restrictions:nodes/aem/view=read]"/>
</jcr:root>
